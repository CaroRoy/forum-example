{% extends "base.html.twig" %}

{% block body %}
<div class="container pt-5 pb-5">
    <div class="row">
        {% include "public/shared/_messages_flash.html.twig" %}
    </div>
    <div class="row">
        <div class="col-12">
            <a class="btn btn-link" href="{{ path('admin_home') }}">Retour</a>
        </div>
        <div class="col-12 mt-3">
            <div class="card">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <h3>Les utilisateurs</h3>
                </div>
                <div class="card-body">
                   <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <th>Pseudo</th>
                                <th>Rôle</th>
                                <th>Détail</th>
                            </thead>
                            <tbody>
                                {% for user in users %}
                                    <tr>
                                        <td>{{ user.pseudo }}</td>
                                        {% if user.roles[0] is same as "ROLE_USER" %}
                                            <td>Aucun</td>
                                        {% else %}
                                            <td>{{ user.roles[0]}}</td>
                                        {% endif %}
                                        <td>
                                            <a href="{{ path('admin_user_show',{ 'id' : user.id })}}">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                   </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
